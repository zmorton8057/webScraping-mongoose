<div class="container">
    
    
    <div class="jumbotron">
        <h1>Game Reporter</h1>
        <panel class="background">
            <form class="create-form">
                <div class="form-group">
                    <label for="newburger"></label>
                    <button type="submit" class="btn btn-success" id="search">
                        <span class="fa fa-search"></span>
                    </button>
                </div>
            </form>
        </panel>
    </div>
    
    <div class="row">
        
        <div class="col-sm-6">
            
            <div class="panel panel-default">
                <h2 class="panel-heading" id="leftside">Newest Articles</h2>
                
                <div class="panel-body">

                    <ul>
                        <div id="articles"></div>
                       
                    </ul>

                </div>
            </div>
        </div>

        <div class="col-sm-6">
            <h2 class="panel panel-default">
                <h2 class="panel-heading" id="rightside">Notes</h2>
                
                <div class="panel-body">

                    <ul>
                        <div id="notes"></div>
                        {{#each articles}}
                            
                              <a href="{{this.link}}">{{this.title}}</a>
                        {{/each}}
                    </ul>

                </div>
            </div>
        </div>
    </div>





    {{!-- end of container class --}}
</div>